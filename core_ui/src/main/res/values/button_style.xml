<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ButtonTextApperanceBase" parent="@style/Base.TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="fontFamily">@font/fira_sans</item>
        <item name="android:fontFamily">@font/fira_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing" tools:ignore="NewApi">0.03</item>
    </style>

    <style name="ButtonTextApperance" parent="@style/ButtonTextApperanceBase">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="fontFamily">@font/fira_sans_medium</item>
        <item name="android:fontFamily">@font/fira_sans_medium</item>
        <item name="android:letterSpacing" tools:ignore="NewApi">0</item>
    </style>

    <style name="Widget.MoslTheme.PrimaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearanceButton">@style/ButtonTextApperance</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="backgroundTint">#E63946</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:padding">@dimen/padding_medium</item>
    </style>

    <style name="Widget.MoslTheme.PrimaryButtonToggle" parent="Widget.MoslTheme.PrimaryButton">
        <item name="backgroundTint">@color/confirm_color_selector</item>
        <item name="android:enabled">false</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Widget.MoslTheme.PrimaryButtonOutline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearanceButton">@style/ButtonTextApperance</item>
        <item name="backgroundTint">?colorSurface</item>
        <item name="android:textColor">#E63946</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">10dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="strokeColor">@color/oultline_button_stroke_color</item>
    </style>

</resources>