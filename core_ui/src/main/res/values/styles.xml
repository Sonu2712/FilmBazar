<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Components-->
    <style name="Widget.MoslTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:theme">@style/Base.MoslTheme</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.MoslTheme.Toolbar</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.FilmTheme.ToolbarSubTitle</item>
        <item name="android:background">?toolbarColor</item>
        <item name="titleMargin">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="TextAppearance.MoslTheme.Toolbar" parent="">
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">#1D3557</item>
        <item name="android:fontFamily">@font/fira_sans_medium</item>
    </style>

    <style name="TextAppearance.FilmTheme.ToolbarSubTitle" parent="">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#E53946</item>
        <item name="android:fontFamily">@font/fira_sans_medium</item>
    </style>

    <style name="RadioSelection" parent="Widget.MoslTheme.RadioButtonBase">
        <item name="android:button">@null</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:singleLine">true</item>
        <item name="fontFamily">@font/fira_sans</item>
    </style>

    <style name="PlaceOrderRadioSelection" parent="RadioSelection">
        <item name="android:textColor">@drawable/placeorder_button_text_color</item>
    </style>

    <style name="MyMenuTextApperance">
        <item name="android:textAllCaps">false</item>
    </style>
    <!--Bottom Sheets-->
    <style name="Widget.MoslTheme.BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor" tools:ignore="NewApi">@android:color/transparent</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/color_surface</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottomsheet_background</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <!--Bottomsheet style for watchlist-->
    <style name="ThemeOverlay.MoslTheme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MoslTheme.BottomSheet.Modal
        </item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.MoslTheme.BottomSheet.Modal</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">?colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">
            @android:color/transparent
        </item>
    </style>

    <style name="Widget.MoslTheme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?shapeAppearanceLargeComponent</item>
    </style>

    <!--Navigation Drawer-->
    <style name="Widget.MoslTheme.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?textAppearanceBody2</item>
    </style>

    <style name="Widget.MoslTheme.ChipWithIcon" parent="Widget.MaterialComponents.Chip.Filter">

    </style>

    <style name="Widget.MoslTheme.Chip" parent="Widget.MaterialComponents.Chip.Choice"></style>

    <style name="Widget.MoslTheme.Space" parent="">
        <item name="android:background">?colorPrimaryVariant</item>
    </style>

    <style name="Widget.MoslTheme.Progressbar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateTint" tools:ignore="NewApi">@color/color_primary</item>
        <item name="android:progressBackgroundTint" tools:ignore="NewApi">
            @color/primary_text_color
        </item>
    </style>

    <style name="filterTextStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textAppearance">@style/FiraSans14Pt</item>
        <item name="android:textColor">@color/filter_text_color_selector</item>
        <item name="android:padding">@dimen/padding_medium</item>
    </style>

    <style name="Widget.MoslTheme.checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_checkbox_checked</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">
            @animator/checkbox_state_animator
        </item>
    </style>

    <style name="Widget.MoslTheme.Card" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.MoslTheme.MediumComponent
        </item>
        <item name="strokeWidth">0dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">2dp</item>
    </style>

    <style name="Widget.MoslTheme.Snackbar" parent="Widget.MaterialComponents.Snackbar.FullWidth">
        <item name="android:textColor">@color/white_text_color</item>
        <item name="fontFamily">@font/fira_sans</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="snackbarButtonStyle">@style/Widget.MoslTheme.Done.Button</item>
    </style>

    <style name="MyTheme.FloatingDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowActionModeOverlay">false</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimAmount">0</item>
    </style>

    <style name="SelectionChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipIconTint">@color/chip_text_and_storke_selection</item>
        <item name="chipStrokeColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/chip_text_and_storke_selection</item>
    </style>

    <style name="chipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/fira_sans_bold</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="TextViewHeadingStyleDabbler" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="RoundedCornersDialog" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="dialogCornerRadius">8dp</item>
    </style>

    <!--Dabbler UI Style End-->


</resources>