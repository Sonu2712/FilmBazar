<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Note: For Numbers used Roboto font and for text used Fira san font-->

    <style name="Widget.MoslTheme.Text" parent="@style/FiraSans12Pt">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/fira_sans</item>
    </style>

    <style name="Widget.MoslTheme.DecorativeText" parent="@style/FiraSans14Pt">
        <item name="android:textColor">@color/action_text_color</item>
    </style>

    <style name="Main.Menu" parent="Widget.MoslTheme.Text">
        <item name="android:textColor">@color/text_selector_main_menu</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="Widget.MoslTheme.EditTextView" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:fontFamily">@font/fira_sans</item>
        <item name="android:textColorHint">@color/secondary_text_color</item>
        <item name="android:textColorHighlight">@color/primary_text_color</item>
    </style>

    <style name="Widget.MoslTheme.EditText.Base" parent="Widget.Design.TextInputLayout">
        <item name="android:fontFamily">@font/fira_sans</item>
        <item name="hintTextAppearance">@style/MoslTheme.TextAppearance.Hint</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColorHint">@color/primary_text_color</item>
        <item name="colorControlNormal">@color/primary_text_color</item>
        <item name="colorControlActivated">@color/primary_text_color</item>
        <item name="colorControlHighlight">@color/primary_text_color</item>
    </style>

    <style name="Widget.MoslTheme.EditText.Normal" parent="Widget.MoslTheme.EditText.Base" />

    <style name="Widget.MoslTheme.EditText.NumberInput" parent="Widget.MoslTheme.EditText.Base">
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="MoslTheme.TextAppearance.Hint" parent="">
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="Sub.Menu" parent="Widget.MoslTheme.Text">
        <item name="android:textColor">@color/text_selector_main_sub_menu</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="Widget.MoslTheme.Resend.Button" parent="@style/FiraSans14Pt">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/resend_button_selector</item>
    </style>

    <style name="Widget.MoslTheme.Done.Button" parent="@style/FiraSans14PtMedium">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/action_text_color</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">14sp</item>
        <item name="boxStrokeColor">@color/film_text_input_layout_outlined_stroke_color</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="hintTextColor">@color/film_mtrl_indicator_text_color</item>
    </style>

</resources>