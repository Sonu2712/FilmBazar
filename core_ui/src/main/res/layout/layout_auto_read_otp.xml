<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvOtp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_normal"
        android:text="An OTP has been sent on"
        android:textColor="#838383"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvPtpMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_normal"
        android:text="@string/text_label_mail"
        android:textColor="#838383"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_marginEnd="@dimen/margin_normal"
        android:weightSum="6">

        <EditText
            android:id="@+id/edOTP1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_weight="1"
            android:background="@drawable/card_button_background"
            android:drawablePadding="@dimen/padding_medium"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:minHeight="48dp"
            android:padding="@dimen/padding_medium" />

        <EditText
            android:id="@+id/edOTP2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_weight="1"
            android:background="@drawable/card_button_background"
            android:drawablePadding="@dimen/padding_medium"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1"
            android:minHeight="48dp"
            android:padding="@dimen/padding_medium"
            android:theme="@style/Widget.MoslTheme.EditText.NumberInput" />

        <EditText
            android:id="@+id/edOTP3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_weight="1"
            android:background="@drawable/card_button_background"
            android:drawablePadding="@dimen/padding_medium"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1"
            android:minHeight="48dp"
            android:padding="@dimen/padding_medium"
            android:theme="@style/Widget.MoslTheme.EditText.NumberInput" />

        <EditText
            android:id="@+id/edOTP4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_weight="1"
            android:background="@drawable/card_button_background"
            android:drawablePadding="@dimen/padding_medium"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1"
            android:minHeight="48dp"
            android:padding="@dimen/padding_medium"
            android:theme="@style/Widget.MoslTheme.EditText.NumberInput" />

        <EditText
            android:id="@+id/edOTP5"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_weight="1"
            android:background="@drawable/card_button_background"
            android:drawablePadding="@dimen/padding_medium"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1"
            android:minHeight="48dp"
            android:padding="@dimen/padding_medium"
            android:theme="@style/Widget.MoslTheme.EditText.NumberInput" />

        <EditText
            android:id="@+id/edOTP6"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_weight="1"
            android:background="@drawable/card_button_background"
            android:drawablePadding="@dimen/padding_medium"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="1"
            android:minHeight="48dp"
            android:padding="@dimen/padding_medium"
            android:theme="@style/Widget.MoslTheme.EditText.NumberInput" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_extra_large"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Didnâ€™t recieve an OTP yet?"
            android:textColor="#282828"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:text="1.30"
            android:textColor="#457B9D"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvResendOTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:text="@string/btn_lbl_resend_otp"
            android:textColor="#457B9D"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:visibility="visible"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvAttempts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:paddingLeft="@dimen/padding_medium"
        android:paddingRight="@dimen/padding_medium"
        android:visibility="gone"
        tools:text="Attempts Remaining : 3"
        tools:visibility="visible" />
</LinearLayout>