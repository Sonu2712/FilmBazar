<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvHelpLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_marginEnd="@dimen/margin_normal"
        android:text="What do you need help with?"
        android:textColor="#282828"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPaymentRefund"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_marginEnd="@dimen/margin_normal"
        android:background="@color/white"
        android:drawablePadding="@dimen/padding_normal"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/padding_extra_large"
        android:paddingTop="@dimen/padding_normal"
        android:paddingEnd="@dimen/padding_normal"
        android:text="Payment &amp; refund"
        app:drawableBottomCompat="@drawable/quotes_horizontal_dash_line"
        app:drawableEndCompat="@drawable/ic_arrow_right_black"
        app:drawableStartCompat="@drawable/ic_edit"
        app:layout_constraintEnd_toEndOf="@+id/tvHelpLabel"
        app:layout_constraintStart_toStartOf="@+id/tvHelpLabel"
        app:layout_constraintTop_toBottomOf="@+id/tvHelpLabel" />

    <TextView
        android:id="@+id/tvAccountRelated"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_marginEnd="@dimen/margin_normal"
        android:background="@color/white"
        android:drawablePadding="@dimen/padding_normal"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/padding_extra_large"
        android:paddingTop="@dimen/padding_normal"
        android:paddingEnd="@dimen/padding_normal"
        android:text="Account related"
        app:drawableBottomCompat="@drawable/quotes_horizontal_dash_line"
        app:drawableEndCompat="@drawable/ic_arrow_right_black"
        app:drawableStartCompat="@drawable/ic_edit"
        app:layout_constraintEnd_toEndOf="@+id/tvPaymentRefund"
        app:layout_constraintStart_toStartOf="@+id/tvPaymentRefund"
        app:layout_constraintTop_toBottomOf="@+id/tvPaymentRefund" />

    <TextView
        android:id="@+id/tvWallet"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_marginEnd="@dimen/margin_normal"
        android:background="@color/white"
        android:drawablePadding="@dimen/padding_normal"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/padding_extra_large"
        android:paddingTop="@dimen/padding_normal"
        android:paddingEnd="@dimen/padding_normal"
        android:text="Wallet"
        app:drawableBottomCompat="@drawable/quotes_horizontal_dash_line"
        app:drawableEndCompat="@drawable/ic_arrow_right_black"
        app:drawableStartCompat="@drawable/ic_edit"
        app:layout_constraintEnd_toEndOf="@+id/tvAccountRelated"
        app:layout_constraintStart_toStartOf="@+id/tvAccountRelated"
        app:layout_constraintTop_toBottomOf="@+id/tvAccountRelated" />

    <TextView
        android:id="@+id/tvInvestment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_marginEnd="@dimen/margin_normal"
        android:background="@color/white"
        android:drawablePadding="@dimen/padding_normal"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/padding_extra_large"
        android:paddingTop="@dimen/padding_normal"
        android:paddingEnd="@dimen/padding_normal"
        android:text="Investment"
        app:drawableBottomCompat="@drawable/quotes_horizontal_dash_line"
        app:drawableEndCompat="@drawable/ic_arrow_right_black"
        app:drawableStartCompat="@drawable/ic_edit"
        app:layout_constraintEnd_toEndOf="@+id/tvWallet"
        app:layout_constraintStart_toStartOf="@+id/tvWallet"
        app:layout_constraintTop_toBottomOf="@+id/tvWallet" />

    <TextView
        android:id="@+id/tvStillFacing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Still facing problems?"
        android:textColor="#282828"
        android:textSize="@dimen/text_size_normal"
        app:layout_constraintBottom_toTopOf="@+id/tvWriteUs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvWriteUs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/padding_normal"
        android:text="Write to us"
        android:textColor="#457B9D"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>