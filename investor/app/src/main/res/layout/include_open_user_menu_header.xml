<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?background"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_normal"
    android:paddingRight="@dimen/padding_normal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/app_min_height_open_user_header_menu"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            style="@style/Main.Menu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="start"
            android:text="@string/app_text_label_open_user_welcome_guest"
            app:layout_constraintLeft_toRightOf="@id/guideLine"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnOpenAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/padding_medium"
            android:text="@string/app_button_label_open_account_in_open_user_menu"
            android:textSize="@dimen/text_size_small" />

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:background="@drawable/dotted_line"
        app:layout_constraintBottom_toTopOf="@+id/txt_open"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            style="@style/Main.Menu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="start|center"
            android:text="@string/app_text_label_already_have_an_account_in_open_user"
            app:layout_constraintLeft_toRightOf="@id/guideLine"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvLogin"
            style="@style/Widget.MoslTheme.DecorativeText"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/login_action_text_height"
            android:layout_gravity="center"
            android:gravity="end|center"
            android:text="@string/app_text_lable_login_in_open_user_menu_header"
            android:textAllCaps="true"
            app:layout_constraintLeft_toRightOf="@id/guideLine"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

</LinearLayout>
